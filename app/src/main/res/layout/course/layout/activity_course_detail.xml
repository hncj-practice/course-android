<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <include layout="@layout/title" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/course_mission"
            style="@style/table_menu_item">

            <TextView
                android:id="@+id/course_mission_text"
                style="@style/course_table_item_text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/course_chapter"
            style="@style/table_menu_item">

            <TextView
                android:id="@+id/course_chapter_text"
                style="@style/course_table_item_text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/course_more"
            style="@style/table_menu_item">

            <TextView
                android:id="@+id/course_more_text"
                style="@style/course_table_item_text"/>

        </LinearLayout>

    </TableRow>

    <FrameLayout
        android:id="@+id/course_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>